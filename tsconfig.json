{
  "compilerOptions": {
    "allowJs": false,
    "module": "CommonJS",
    "target": "ES2019",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "./typings",
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts"
  ]
}